<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/imageButton_Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/imageButton_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageButton_Start"
            android:layout_below="@+id/imageButton_Start"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/imageButton_Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageButton_Info"
            android:layout_below="@+id/imageButton_Info"
            android:layout_marginTop="26dp"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

</LinearLayout>